    <div id="wrapper" class="clearfix">

        @if (!Request.RawUrl.ToLower().Contains("login") &&
             !Request.RawUrl.ToLower().Contains("register") &&
             !Request.RawUrl.ToLower().Contains("forgotpassword") &&
             !Request.RawUrl.ToLower().Contains("resetpassword") &&
             !Request.RawUrl.ToLower().Contains("notfound") &&
             !Request.RawUrl.ToLower().Contains("error"))
        {
            <header id="header" class="full-header">
                <div id="header-wrap">
                    <div class="container clearfix">

                        <div id="primary-menu-trigger"><i class="icon-reorder"></i></div>
                        <div id="logo">
                            <a href="/" class="standard-logo"><img src="/images/logo.png"></a>
                            <a href="/" class="retina-logo"><img src="/images/logo.png"></a>
                        </div>

                        <nav id="primary-menu">
                            <ul style="border-right: none;">
                                @if (!Request.IsAuthenticated)
                                {
                                    <li class="mega-menu current">
                                        <a href="/login"><div>Login</div></a>
                                    </li>
                                    <li class="mega-menu">
                                        <a href="/register"><div>Signup</div></a>
                                    </li>
                                }
                                else
                                {
                                    <li class="mega-menu">
                                        <a href="/account/logoff"><div>Logoff</div></a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </header>
        }

        @RenderBody()

        @if (!Request.RawUrl.ToLower().Contains("login") &&
             !Request.RawUrl.ToLower().Contains("register") &&
             !Request.RawUrl.ToLower().Contains("forgotpassword") &&
             !Request.RawUrl.ToLower().Contains("resetpassword") &&
             !Request.RawUrl.ToLower().Contains("error") &&
             !Request.RawUrl.ToLower().Contains("notfound"))
        {
            <footer id="footer" class="dark">
                <div id="copyrights">
                    <div class="container clearfix">

                        <div class="col_half">
                            Copyrights &copy; 2017 All Rights Reserved by rssheap. Built by <a href="https://www.maus.ba" style="color: gray;" target="_blank">MAUS d.o.o.</a><br>
                            <div class="copyright-links"><a href="/terms">Terms of Use</a> / <a href="/privacy">Privacy Policy</a> / <a href="/cookie-policy">Cookie Policy</a></div>
                        </div>

                        <div class="col_half col_last tright">
                            <div class="fright clearfix">
                                <a target="_blank" href="http://www.facebook.com/sharer/sharer.php?u=http://www.rssheap.com" class="social-icon si-small si-borderless si-facebook">
                                    <i class="icon-facebook"></i>
                                    <i class="icon-facebook"></i>
                                </a>

                                <a target="_blank" href="https://twitter.com/intent/tweet?text=@Url.Encode("#rssheap you subscribe to tags you are interested in (c#,java,ruby..) and we find great articles for you to read: http://rssheap.com")" class="social-icon si-small si-borderless si-twitter">
                                    <i class="icon-twitter"></i>
                                    <i class="icon-twitter"></i>
                                </a>

                                <a target="_blank" href="https://plus.google.com/share?url=http://www.rssheap.com" class="social-icon si-small si-borderless si-gplus">
                                    <i class="icon-gplus"></i>
                                    <i class="icon-gplus"></i>
                                </a>

                                <a target="_blank" href="http://www.linkedin.com/shareArticle?mini=true&url=http://www.rssheap.com&title=RSS Reader for Developers" class="social-icon si-small si-borderless si-linkedin">
                                    <i class="icon-linkedin"></i>
                                    <i class="icon-linkedin"></i>
                                </a>
                            </div>

                            <div class="clear"></div>

                            <i class="icon-envelope2"></i>&nbsp; mail[at]rssheap.com
                        </div>

                    </div>

                </div>

            </footer>
        }

    </div>
    <div id="gotoTop" class="icon-angle-up"></div>

    @if (Request.Cookies["cookies"] == null)
    {
        <div id="cookie-notice" role="banner" class="cn-bottom wp-default" style="color: #CCC; background-color: #333; display: block;">
            <div class="cookie-notice-container">
                <span id="cn-notice-text">By continuing to browse or by clicking “Accept All Cookies”, you agree to the storing of first- and third-party cookies on your device to enhance site navigation, analyse site usage, and assist in our marketing efforts.</span>
                &nbsp;
                <a href="#" id="cn-accept-cookie" data-cookie-set="accept" class="cn-set-cookie cn-button wp-default">Accept All Cookies</a>
                &nbsp;
                <a href="/cookie-policy/" target="_blank" id="cn-more-info" class="cn-more-info cn-button wp-default">Cookie Policy</a>
            </div>
        </div>
    }

    <script type="text/javascript" src="/js/jquery.js"></script>
    <script type="text/javascript" src="/js/plugins.js"></script>

    <script type="text/javascript" src="/js/functions.js"></script>
    <script src="/js/js.cookie.js"></script>

    @Html.RenderScripts()

    <script type="text/javascript">
        $(document).ready(function () {
            var token = $('input[name="__RequestVerificationToken"]').val();
            $.ajaxPrefilter(function (options, originalOptions) {
                if (options.type.toUpperCase() == "POST") {
                    options.data = $.param($.extend(originalOptions.data, { __RequestVerificationToken: token }));
                }
            });

            $("#cn-accept-cookie").click(function (e) {
                e.preventDefault();
                Cookies.set('cookies', 'true');
                $("#cookie-notice").fadeOut("fast");
                return false;
            });
        });
