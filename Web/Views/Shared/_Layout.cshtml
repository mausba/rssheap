@{
    var user = (ViewContext.Controller as MvcWeb.Controllers._BaseController).CurrentUser;
}

<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>

    @RenderSection("seo", required: true)

    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
